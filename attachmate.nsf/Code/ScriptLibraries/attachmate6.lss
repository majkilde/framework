	Function hasData() As Boolean
		On Error Goto eh
		hasData = False
		If collCount = 0 Then Exit Function
		
		Dim i As Integer
		Forall coll In sourceColl
			If Not coll Is Nothing Then
				Select Case Typename( coll )
				Case "NOTESVIEW"
					hasData = True
					Exit Function
					
				Case "NOTESDOCUMENTCOLLECTION"
